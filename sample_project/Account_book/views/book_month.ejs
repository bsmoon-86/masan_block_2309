<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <%- include ('./refer/head.ejs')%>
    <script>
        function search(){
            // id가 year, month 인 태그를 선택하여 value를 추출
            const year = $('#year').val()
            const month = $('#month').val()
            const select = $('#select').val()
            // 비동기 통신을 이용하여 데이터를 로드 
            $.ajax({
                url : '/book/select_month', 
                method : 'get', 
                dataType : 'json', 
                data : {
                    '_year' : year, 
                    '_month' : month, 
                    '_select' : select
                } 
            })
            .done(function(result){
                let html_data = ""
                html_data += `
                        <table class='table'>
                            <tr>
                                <th>거래처</th>
                                <th>코드</th>
                                <th>부가세</th>
                                <th>거래금액</th>
                            </tr>
                    `
                for(let i = 0; i < result.length; i++){
                    html_data += `
                        <tr>
                            <td>${result[i]['bisiness']}</td>
                            <td>${result[i]['code']}</td>
                            <td>${result[i]['vat']}</td>
                            <td>${result[i]['cost']}</td>
                        </tr>
                    `
                }
                html_data += '</table>'
                $('#month_list').html(html_data)
            })
        }
    </script>
</head>
<body>
    <div class="container">
        <div class="input-group mb-3">
            <span class="input-group-text" id="input_year">년도</span>
            <select class="form-select" id="year" aria-describedby="input_year">
                <!-- 반복문을 이용하여 option 생성 -->
                <% for(let i = 2020; i < 2024; i++){ %>
                    <option value="<%=i%>"><%=i%></option>
                <%}%>
            </select>    
            <span class="input-group-text" id="input_month">월</span>
            <select class="form-select" id="month" aria-describedby="input_month">
                <% for(let i = 1; i < 13; i++){ %>
                    <option value="<%=i%>"><%=i%></option>
                <% } %>
            </select> 
            <span class="input-group-text" id="input_select">매입/매출</span>
            <select class="form-select" id="select" aria-describedby="input_select">
                <option value="매입">매입</option>
                <option value="매출">매출</option>
            </select> 
            <button class="btn btn-primary" onclick="search()"> 조회</button>
        </div>
        <div id="month_list" class="container">
        </div>
    </div>

</body>
</html>